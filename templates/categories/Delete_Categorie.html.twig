{# ***************************************** FICHIER PARENT ******************************* #}

{% extends 'backOffice.html.twig' %}

{# ***************************************** TITLE **************************************** #}

{% block title %}Categories
{% endblock %}

{# ***************************************** NAV ET MENU ********************************** #}

{% block menu %}
	{% include 'categories/Gestion_Categories.html.twig' %}
{% endblock %}

{# ***************************************** BODY ***************************************** #}

{% block body %}
{# --------------------------------------POPUP DELETE ------------------------------ #}

	<div id='container_form ' class='ma-classe'>
		{# Pop Up formulaire supprimer #}
		<div class='popupCatégorie'>
			<div class='popUP_Create Delete-mode '>
				<div class='col-lg-3 Create Delete-mode '>
					{# Icon Supprimer #}
					<i class="fa-solid fa-trash-can fa-3x changeColor mb-1"></i>
				</div>

				<div
					class='d-flex align-items-center'>
					{# titre #}
					<h4>DELETE CATEGORIE</h4>
				</div>
			</div>

			<div class="main_delete">
				<p>Suppression de la catégorie
					<span class='text_color_Delete'>{{ categorie.caLibelle}}</span>
				</p>
			</div>

			<div class='SubmitRecettes'>
				<a class="m-2 btn  myBoutton affichePopUp" href={{url('Gestion_Catégorie')}}>Retour</a>
				<a class="btn myBouttonSubmit_Delete m-2" href={{url('delete_categories', {'id': categorie.id} )}}>Supprimer</a>
			</div>
		</div>
	</div>

{# ***************************************** JAVASCRIPT ***************************************** #}

<script>
	// Désactive le scroll quand la popUp et affiché
	window.onload = function () {
	var element = document.querySelector('.ma-classe');
	if (element) {
	document.body.classList.add('scroll-desactive');
	$('.voile').toggle();
	}
	};
</script>

{% endblock %}
