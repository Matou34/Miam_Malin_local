{# ***************************************** FICHIER PARENT ******************************* #}

{% extends 'backOffice.html.twig' %}

{# ***************************************** TITLE **************************************** #}

{% block title %}Unités{% endblock %}

{# ***************************************** NAV ET MENU ********************************** #}

{% block menu %}
    {% include 'Menu.html.twig' %}
{% endblock %}

{# ***************************************** BODY ***************************************** #}

{% block body %}
    {# titre #}
    <h3 class='text-center'>{{message}}</h3>


{# ------------------------------- TABEAU GESTION ------------------------- #}

    {% if unites | length > 0 %}
    {# Boutton ajouter #}
    <a href={{url('Create_Unite')}} class='Cercle' id='affichePopUpUnite' class='btn'><i class="fa-solid fa-plus-minus text-white fa-2x"></i></a>

    <section class="mt-5 mb-5 tableau row m-0">
        {# Entete du tableau #}
        <div class='tete_tableau col-lg-11'>
            <div class="colonne1 col-lg-10">
                <span scope="col"class='text-center'>Nom Unité de mesure</span>
            </div>
            <div class="colonne2 col-lg-2">
                <span scope="col" class='text-center'>Actions</span>         
            </div>
        </div>

        {# Corp du tableau #}
        <div class='Corp_tableau col-lg-11 p-0'>
            {% for unite in unites %} 
                <div class='d-flex col-lg-12 corp_tableau2 d-lg-flex align-items-center {% if loop.index is odd %}ligne-impaire{% else %}ligne-paire{% endif %}'>
                    <div class="colonne1  col-lg-10 p-0">                
                        <span scope="col" class='text-center ml-5'>{{ unite.unLibelle}}</span>
                    </div>
                    <div class="colonne2 col-lg-2">
                        <span scope="col" class='text-center'> 
                            <a id="affichePopUpUpdate"  href={{url('Update_Unite', {'id': unite.id})}}><i class="fa-solid fa-pen-to-square text-warning fa-lg"></i></a>
                            {% if not isInitesUsed[unite.id] %}
                            <a id="affichePopUpUpdate" class='delete ml-4'  href={{url('delete_Unite_pop_Up', {'id': unite.id})}}><i class="fa-solid fa-trash-can text-danger fa-lg"></i></a>
                            {% endif %}
                        </span>
                    </div>
                </div>
            {% endfor %} 
        </div>
    </section>

    {% else %}
        <p>Aucune unité pour l'instant</p>
    {% endif %} 
</div>

<script>
    function OpenPopUp(pSelect) {
        // Pour afficher le voile et la pop-up
            $(pSelect).click(function() {
                $('.voile').toggle(); 
                $('.popupCatégorie').toggle();
            });
    }
    OpenPopUp('#affichePopUpUnite');
</script>


{% endblock %}
