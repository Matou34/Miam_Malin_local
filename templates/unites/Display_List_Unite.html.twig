{% if unites | length > 0 %}
    <div id="dataTables_Container" class="col m-3">
        <table id="dtValues" class="table table-striped" style="width:100%">
            <thead class='pt-2'>
                <tr>
                    <th class="custom-thead custom-Thead">Nom Unité de mesure</th>
                    <th class="custom-thead custom-THead">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for unite in unites %}
                    <tr>
                        <td>{{ unite.unLibelle }}</td>
                        <td>
                            <button onclick="showModalUpdateUnite('{{ unite.id }}')" class='Btn m-1'><i class="fa-solid fa-pen-to-square text-warning fa-lg"></i></button>                            
                            {% if not isInitesUsed[unite.id] %}
                            <button onclick="showModalDeleteUnite('{{ unite.id }}')" class='Btn m-1'><i class="fa-solid fa-trash-can text-danger fa-lg"></i></button>                            
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p>Aucun Unités pour l'instant</p>
{% endif %} 
