    {% if produits | length > 0 %}
    <div id="dataTables_Container" class="col m-3">
        <table id="dtValues" class="table table-striped" style="width:100%">
            <thead class='pt-2'>
                <tr>
                    <th class="custom-thead custom-Thead">Nom Ingrédients</th>
                    <th class="custom-thead custom-Thead">Nom Catégories</th>
                    <th class="custom-thead custom-THead">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %} 
                    <tr>
                        <td>{{ produit.prLibelle }}</td>
                        <td>{{ produit.categorie.caLibelle }}</td>
                        <td>
                            <button onclick="showModalUpdateProduit('{{ produit.id }}')" class='Btn m-1'><i class="fa-solid fa-pen-to-square text-warning fa-lg"></i></button>                            
                            {% if not isProduitsUsed[produit.id] %}
                            <button onclick="showModalDeleteProduit('{{ produit.id }}')" class='Btn m-1'><i class="fa-solid fa-trash-can text-danger fa-lg"></i></button>                            
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p>Aucun ingrédient pour l'instant</p>
{% endif %} 