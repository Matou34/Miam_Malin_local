{% if cuissons | length > 0 %}
    <div id="dataTables_Container" class="col m-3">
        <table id="dtValues" class="table table-striped" style="width:100%">
            <thead class='pt-2'>
                <tr>
                    <th class="custom-thead custom-Thead">Nom mode de cuisson</th>
                    <th class="custom-thead custom-THead">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for cuisson in cuissons %} 
                    <tr>
                        <td>{{ cuisson.cuLibelle }}</td>
                        <td>
                            <button onclick="showModalUpdateCuisson('{{ cuisson.id }}')" class='Btn m-1'><i class="fa-solid fa-pen-to-square text-warning fa-lg"></i></button>                            
                            {% if not isCuissonUsed[cuisson.id] %}
                            <button onclick="showModalDeleteCuisson('{{ cuisson.id }}')" class='Btn m-1'><i class="fa-solid fa-trash-can text-danger fa-lg"></i></button>                            
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p>Aucun mode de cuisson pour l'instant</p>
{% endif %} 